nextflow_process {

    name "Test Process imeta_study"
    script "modules/imeta_study.nf"
    process "imeta_study"

    test("Should fail") {
        when {
            params {
                run_imeta_study = true
            }
            process {
                """
                input[0] = 9999  // No such study
                input[1] = []
                input[2] = []
                input[3] = true
                """
            }
        }
        then {
            assert process.failed
        }
    }

    test("Should run without failures and produce samples.tsv") {
        tag "study_input"
        def study_id = 6900
        when {
            params {
                run_imeta_study = true
            }
            process {
                """
                input[0] = 6900
                input[1] = []
                input[2] = []
                input[3] = true
                """
            }
        }
        then {
            assert process.success
            with (process.out.irods_samples_tsv.get(0)) {
                assert size() == 2
                assert get(0) == study_id
                assert path(get(1)).readLines().size() == 214
            }
        }
    }

    test("Should run without failures and produce samples.tsv for 1 run") {
        tag "run_input"
        def study_id = 6900
        when {
            params {
                run_imeta_study = true
            }
            process {
                """
                input[0] = 6900
                input[1] = 45347
                input[2] = []
                input[3] = true
                """
            }
        }
        then {
            assert process.success
            with (process.out.irods_samples_tsv.get(0)) {
                assert size() == 2
                assert get(0) == study_id
                assert path(get(1)).readLines().size() == 143
            }
        }
    }

    test("Should run without failures and produce samples.tsv for 1 run with failed samples") {
        tag "run_input"
        def study_id = 5000
        when {
            params {
                run_imeta_study = true
            }
            process {
                """
                input[0] = 5000
                input[1] = 28048
                input[2] = []
                input[3] = false
                """
            }
        }
        then {
            assert process.success
            with (process.out.irods_samples_tsv.get(0)) {
                assert size() == 2
                assert get(0) == study_id
                assert path(get(1)).readLines().size() == 193
            }
        }
    }

    test("Should run without failures if list of samples provided") {
        tag "samples_input"
        when {
            params {
                run_imeta_study = true
            }
            process {
                """
                input[0] = []
                input[1] = []
                input[2] = file("${projectDir}/tests/data/samples.txt")
                input[3] = false
                """
            }
        }
        then {
            assert process.success
            with (process.out.irods_samples_tsv.get(0)) {
                assert size() == 2
                assert get(0) == []
                assert path(get(1)).readLines().size() == 3
            }
        }
    }
}
